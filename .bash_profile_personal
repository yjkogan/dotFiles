[[ -s ~/.bashrc ]] && source ~/.bashrc

# path to mysql
export PATH="$PATH:/usr/local/bin:/usr/local/mysql/bin"
# path to psql
export PATH="$PATH:/Applications/Postgres.app/Contents/MacOS/bin/psql"

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

export PATH=/usr/local/share/npm/bin:$PATH
export PATH=$AWS_RDS_HOME/bin:$PATH

PATH=$PATH:$HOME/.rvm/bin:./node_modules/.bin # Add RVM to PATH for scripting

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

source ~/.bashrc